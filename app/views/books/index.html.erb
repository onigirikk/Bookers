<h1>Books</h1>

<% @books.each do |book| %>

<p><strong>Title</strong></p>
<span><%= book.title %></span>

<p><strong>Body</strong></p>
<span><%= book.body %></span>

<%= link_to "Show", book_path(book.id) %>
<%= link_to "Edit", edit_book_path(book.id) %>
<%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>

<% end %>

<h1>New book</h1>

<%= form_with model: @book do |f| %>

<p>Title</p>
 <%= f.text_field:title %>
 
<p>Body</p>
 <%= f.text_area:body %>
 
 <br>
 <%= f.submit "Create Book" %>


<% end %>

